<%= form_for @game do |f| %>
    <div class="input-field col s6">
        <%= f.label :name, 'Name'%>
        <%= f.text_field :name%>
    </div>
    <div class="input-field col s6">
        <%= f.label :published_date, 'published_date' %>
        <%= f.text_field :published_date %>
    </div>
    <div class="input-field col s6">
        <%= f.label :user_rate, 'user_rate' %>
        <%= f.text_field :user_rate %>
    </div>
    <div class="input-field col s6">
        <%= f.label :price, 'price' %>
        <%= f.text_field :price %>
    </div>
    <div class="input-field col s6">
        <%= f.label :description, 'description' %>
        <%= f.text_field :description %>
    </div>
    <div class="input-field col s6">
        <%= f.label :img, 'Image' %>
        <%= f.file_field :img %>
    </div>
    <%= f.submit "Submit", :class => "btn waves-effect waves-light" %>
  <% end %>

  