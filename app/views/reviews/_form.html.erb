<%= form_for @review do |f| %>
    <%= f.hidden_field :game_id, :value => params[:game_id] %>
    <div class="input-field col s6">
        <%= f.label :content, 'Content' %>
        <%= f.text_field :content %>
    </div>
    
    
    <%= f.submit "Submit", :class => "btn waves-effect waves-light" %>
  <% end %>



